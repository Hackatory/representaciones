<%= simple_form_for([@namespace, @invoice]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :date, as: :string, label: 'Fecha', input_html:
      { value: f.object.date && f.object.date.strftime('%d/%m/%Y'),
        data: { provide: :datepicker } } %>
    <%= f.association :operator, collection: operators,
      label: 'Operador' %>
    <%= f.input :invoice_type, collection: Invoice::INVOICE_TYPES,
      label: 'Factura Tipo' %>
    <%= f.input :sales_point, label: 'Punto de venta' %>
    <%= f.input :number, label: 'NÃºmero' %>
    <%= f.input :taxed_21, label: 'Gravado IVA 21%' %>
    <%= f.input :taxed_105, label: 'Gravado IVA 10,5%' %>
    <%= f.input :not_taxed, label: 'No gravado' %>
    <%= f.input :exempt, label: 'Exento' %>
    <%= f.input :perception, label: 'Percepcion AFIP' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Aceptar', class: 'btn btn-primary' %>
  </div>
<% end %>
