<%= simple_form_for([@namespace, @invoice]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :date, as: :string, label: 'Fecha',
      input_html: { data: {provide: :datepicker}  } %>
    <%= f.association :operator, collection: operators,
      label: 'Operador' %>
    <%= f.input :invoice_type, collection: Invoice::INVOICE_TYPES,
      label: 'Factura Tipo' %>
    <%= f.input :sales_point %>
    <%= f.input :number %>
    <%= f.input :taxed_21, label: 'IVA 21%' %>
    <%= f.input :taxed_105, label: 'IVA 10,5%' %>
    <%= f.input :not_taxed, label: 'No gravado' %>
    <%= f.input :exempt, label: 'Exento' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
