<table class="table">
  <thead>
    <tr>
      <th>Monto</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movements.each do |movement| %>
      <tr>
        <td class="peso"><%= movement.monto %></td>
        <td><%= link_to 'Detalles', movement_path(movement) %></td>
        <td><%= link_to 'Editar', edit_movement_path(movement) %></td>
        <td><%= link_to 'Borrar', movement_path(movement), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <tr>
      <td>Total: <b class="peso"><%= @movements.pluck(:monto).reduce(:+)%></b></td>
    </tr>
  </tbody>
</table>
