<%= simple_form_for([@operator, @movement]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :monto %>
    <%= f.association :reserva, as: :hidden %>
    <%= f.input :type, as: :hidden %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
